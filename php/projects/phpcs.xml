<?xml version="1.0"?>
<ruleset name="MyStandard">
    <description>My PHP coding standard.</description>
    <rule ref="Zend">
        <exclude name="Generic.Files.LineLength"/>
        <exclude name="Generic.Commenting"/>
        <exclude name="Zend.NamingConventions"/>
    </rule>
    <rule ref="PEAR">
        <exclude name="PEAR.NamingConventions.ValidFunctionName"/>
        <exclude name="PEAR.NamingConventions.ValidVariableName"/>
        <exclude name="PEAR.Commenting"/>
        <exclude name="PEAR.Functions.FunctionCallSignature.ContentAfterOpenBracket"/>
        <exclude name="PEAR.Classes.ClassDeclaration.MissingBrace"/>
        <exclude name="PEAR.Functions.FunctionCallSignature.CloseBracketLine"/>
        <exclude name="PEAR.Functions.FunctionDeclaration.CloseBracketLine"/>
        <exclude name="PEAR.Functions.FunctionDeclaration.NewlineBeforeOpenBrace"/>
        <exclude name="PEAR.Files.IncludingFile.UseInclude"/>
        <exclude name="Generic.Functions.OpeningFunctionBraceBsdAllman.BraceOnSameLine"/>
        <exclude name="PEAR.NamingConventions"/>
        <exclude name="PEAR.WhiteSpace"/>
        <exclude name="PEAR.ControlStructures.MultiLineCondition"/>
        <exclude name="PEAR.Formatting.MultiLineAssignment"/>
        <exclude name="Squiz.Functions"/>
    </rule>
    <rule ref="Internal.NoCodeFound">
        <exclude-pattern>*.blade.php</exclude-pattern>
    </rule>
</ruleset>
